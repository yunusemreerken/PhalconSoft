@model PhalconSoft.Models.SendEmailViewModel
<!-- ======= Contact Us Section ======= -->
<section id="contact" class="contact section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>İletişim</h2>
            <p>Bizimle iletişim kurmaya başlayın</p>
        </div>

        <div class="row">

            <div class="col-lg-5 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                <div class="info">
                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Konum:</h4>
                        <p>Belde Mah. 3209 Sokak No:4 D.No:4 Batman/Merkez</p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>iletisim@phalconsoft.com</p>
                    </div>

                   @* <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Call:</h4>
                        <p>+1 5589 55488 55s</p>
                    </div>*@

                    <iframe src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d787.1010063310114!2d41.13947248812584!3d37.89761805700608!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMzfCsDUzJzUxLjQiTiA0McKwMDgnMjQuMSJF!5e0!3m2!1str!2str!4v1677940261636!5m2!1str!2str" frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen></iframe>
                </div>

            </div>

            <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="200">
                <form asp-action="SendEmail" role="form" class="php-email-form">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="NameSurname">İsim</label>
                            <input asp-for="NameSurname" class="form-control" placeholder="Lütfen isminizi giriniz" required>
                        </div>
                        <div class="form-group col-md-6 mt-3 mt-md-0">
                            <label asp-for="Email">Email adres</label>
                            <input asp-for="Email" class="form-control" placeholder="Lütfen Email adresinizi giriniz" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Subject">Konu</label>
                        <input asp-for="Subject" class="form-control" placeholder="Lütfen konuyu bir başlık giriniz" required>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Message">Mesajınız</label>
                        <textarea class="form-control" asp-for="Message" rows="10" required></textarea>
                    </div>
                    <div class="my-3">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Your message has been sent. Thank you!</div>
                    </div>
                    <div class="text-center"><input type="submit" value="Mesaj gönder"/></div>
                </form>
            </div>

        </div>

    </div>
</section><!-- End Contact Us Section -->


