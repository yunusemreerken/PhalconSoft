@model List<SendEmail>
@{
    ViewData["Title"] = "Gelen Mesaj Kutusu";
}
<table class="table">
    <thead>
    <tr>
        <th>Email</th>
        <th>Subject</th>
        <th>Message</th>
        <th>Date</th>
        <th>Operations</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.Message</td>
            <td>@item.Date.ToString("g")</td>
            <td>
                <a class="btn btn-danger" asp-controller="IncomeMessage" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                <a class="btn btn-primary" asp-controller="IncomeMessage" asp-action="Details" asp-route-id="@item.Id">Detay</a>
            </td>
        </tr>
    }
    </tbody>
</table>

